@model List<Category>
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-file-earmark-plus"></i>  Register New Employee
            </a>

        </div>
    </div>
<table class="table table-bordered table-striped">
   <thread>
    <tr>
        <th>
            Employee Name
        </th>
        <th>
            Gender
        </th>
        <th>Email</th>
        <th>Phone</th>
        <th>Password</th>
        <th>LinkedinUrl</th>
        </tr>
    </thread>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>@obj.Name</td>
            <td>@obj.Gender</td>
            <td>@obj.Email</td>
            <td>@obj.Phone</td>
            <td>@obj.password</td>
            <td>@obj.LinkedinUrl</td>
        </tr>}
    </tbody>
</table>
</div>
